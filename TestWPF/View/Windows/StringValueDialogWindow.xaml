<Window x:Class="TestWPFApp.View.Windows.StringValueDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPFApp.View.Windows"
        mc:Ignorable="d"
        Title="StringValueDialogWindow" Height="264" Width="349"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="5">
        <UniformGrid Rows="1" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="5" 
                     ButtonBase.Click="OnButtonClick">
            <Button Content="OK" IsDefault="True" Margin="5 0" Padding=" 30 5" FontWeight="Bold" />
            <Button Content="Cancel" IsCancel="True" Margin="5 0" Padding=" 30 5" FontWeight="Bold" />
        </UniformGrid>

        <TextBlock Text="Сообщение" Name="MessageTexBlock" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <TextBox Name="valueTextBox" DockPanel.Dock="Top" Margin="5 10"/>
    </DockPanel>
</Window>
